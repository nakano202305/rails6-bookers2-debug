<div class= 'container px-5 px-sm-0'>
  <div class= 'row'>
    <div class= 'col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class= "mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class= 'col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <td><%= image_tag @group.image if @group.image.attached? %></td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <td>
            <% if @group.user_id == current_user.id %>
              <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success"  %>
            <% end %>
          </td>
        </tr>
      </table>
      <%#= render 'groups/join_button', group: @group %>
      <% if current_user.join_group?(@group) %>
        <%= link_to "delete", group_group_users_path(@group), method: :delete, local: true %>
      <% else %>
        <%= link_to "create", group_group_users_path(@group), method: :post, local: true %>
      <% end %>
    </div>  
  </div>
</div>