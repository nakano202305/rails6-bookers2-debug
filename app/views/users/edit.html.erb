<% if @user.errors.any? %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>User info</h1>
    <%= form_with model: @user do |f| %>
      <p><label for="inputName">Name</label></p>
      <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
      <p><label for="inputImage">Image</label></p>
      <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
      <p><label for="inputName">Introduction</label></p>
      <p><%= f.text_field :introduction%></p>
      <p><%= f.submit "Update User", class: "btn btn-secondary" %></p>
    <% end %>
    
    <% if user_signed_in? && @user.id == current_user.id %>
		  <%= link_to "Destroy", user_unsubscribe_path(current_user), method: :patch, class: "btn btn-outline-danger" %>
    <% end %>
    
    </div>
  </div>
</div>
